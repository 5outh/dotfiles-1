-- vi:set filetype=haskell
Config
    { font = "xft:Source Code Pro:size=10:antialias=false"
    , borderColor = "black"
    , border = TopB
    , bgColor = "black"
    , fgColor = "#cccccc"
    , position = TopW L 100
    , commands =
        [ Run Weather "KAHN" 
            [ "-t", "<tempF>Â°F"
            , "-L", "45"
            ,"-H","90"
            ,"--normal","green"
            ,"--high","red"
            ,"--low","lightblue"
            ] 6000
        , Run Battery
            [ "-t", "<acstatus>"
            , "-L", "15"
            , "-H", "40"
            , "-l", "red"
            , "--normal", "orange"
            , "-h", "green"
            , "--"
            , "-o", "<left>% (<timeleft>)"
            , "-O", "<fc=blue>heyoo</fc>"
            , "-i", "<fc=green>:D</fc>"
            ] 50
        , Run StdinReader
        , Run Date "%A, %B %_d '%y | %r"  "date" 10
        , Run Wireless "wlan0"
            [ "-t", "'<essid>' <qualityvbar>"
            ] 10
        , Run Volume "default" "Master" [] 5
        ]
    , sepChar = "%"
    , alignSep = "}{"
    , template =
        "%StdinReader% | }{ %default:Master% | %wlan0wi% | %date% | %battery% | %KAHN%"
    }
